<?xml version="1.0"?>
<data_managers>
    <data_manager tool_file="data_manager/get_TCGA.xml" id="elmer_tcga_fetcher" version="0.0.0">
        <data_table name="elmer_tcga_indexes">
            <output>
                <column name="value" /> <!-- TCGA Methylation/Expression/Clinical -->
                <column name="name" /> <!-- Cancer type -->
                <column name="path" output_ref="out_file"> <!-- path of file -->
                    <move type="directory" relativize_symlinks="True">
                        <target base="${GALAXY_DATA_MANAGER_DATA_PATH}">elmer_tcga_index/${value}</target>
                    </move>
                    <value_translation>${GALAXY_DATA_MANAGER_DATA_PATH}/elmer_tcga_index/${value}</value_translation>
                    <value_translation type="function">abspath</value_translation>
                </column>
            </output>
        </data_table>
    </data_manager>
</data_managers>

